Alias           /BackupPC/images        <%= @cgi_image_dir %>
ScriptAlias     /BackupPC               <%= @cgi_directory %>/BackupPC_Admin
ScriptAlias     /backuppc               <%= @cgi_directory %>/BackupPC_Admin

<Directory <%= @install_directory %>>
  Order deny,allow
  Deny from all
  Allow from <%= @apache_allow_from %>
  <% if @apache_require_ssl -%>
  SSLRequireSSL
  <% end -%>
  
  AuthType Basic
  AuthUserFile <%= @htpasswd_apache %>
  AuthName "BackupPC"
  require valid-user    
</Directory>
